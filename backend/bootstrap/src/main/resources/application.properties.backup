spring:
  application:
    name: tymee

  datasource:
    url: jdbc:h2:mem:tymee
    driver-class-name: org.h2.Driver
    username: sa
    password:

  h2:
    console:
      enabled: true
      path: /h2-console

  jpa:
    hibernate:
      ddl-auto: create-drop
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        use_sql_comments: true

server:
  port: 8080
  error:
    include-message: always
    include-binding-errors: always

logging:
  level:
    io.github.beom: DEBUG
    org.springframework.web: INFO
    org.springframework.security: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE

# JWT 설정
jwt:
  secret: your-secret-key-change-this-in-production-min-256-bits-required-for-hs256-algorithm
  access-token-expiration: 900000       # 15분 (milliseconds)
  refresh-token-expiration: 604800000   # 7일 (milliseconds)

# Cookie 설정
cookie:
  domain: localhost
  secure: false        # 로컬 개발용 (운영에서는 true)
  same-site: Lax
