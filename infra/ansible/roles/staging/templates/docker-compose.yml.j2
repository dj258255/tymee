# 스테이징 서버 (oracle-aarch64-2)
# 올인원: Spring Boot + Nginx + MySQL + MongoDB + Redis + RabbitMQ + Exporters
# 총 6GB RAM - 메모리 제한 적용

services:
  # 애플리케이션 (1GB)
  app:
    image: ghcr.io/{{ github_repository }}/tymee-backend:staging
    container_name: tymee-staging-app
    restart: unless-stopped
    ports:
      - "8080:8080"
    env_file:
      - .env
    environment:
      - SPRING_PROFILES_ACTIVE=staging
      - SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/tymee?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Seoul
      - SPRING_DATASOURCE_USERNAME=${MYSQL_USER}
      - SPRING_DATASOURCE_PASSWORD=${MYSQL_PASSWORD}
      - SPRING_DATA_MONGODB_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/tymee?authSource=admin
      - SPRING_DATA_REDIS_HOST=redis
      - SPRING_DATA_REDIS_PORT=6379
      - SPRING_DATA_REDIS_PASSWORD=${REDIS_PASSWORD}
      - SPRING_RABBITMQ_HOST=rabbitmq
      - SPRING_RABBITMQ_PORT=5672
      - SPRING_RABBITMQ_USERNAME=${RABBITMQ_USER}
      - SPRING_RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD}
      - JAVA_OPTS=-Xms512m -Xmx768m
    depends_on:
      mysql:
        condition: service_healthy
      mongodb:
        condition: service_healthy
      redis:
        condition: service_healthy
      rabbitmq:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/actuator/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 1G
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # 웹 서버 (64MB)
  nginx:
    image: nginx:alpine
    container_name: tymee-staging-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
      - ./certbot/conf:/etc/letsencrypt:ro
      - ./certbot/www:/var/www/certbot:ro
    depends_on:
      - app
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 64M

  # MySQL (1.5GB)
  mysql:
    image: mysql:8.0
    container_name: tymee-staging-mysql
    restart: unless-stopped
    env_file:
      - .env
    environment:
      - MYSQL_DATABASE=tymee
    volumes:
      - mysql_data:/var/lib/mysql
    command:
      - --character-set-server=utf8mb4
      - --collation-server=utf8mb4_unicode_ci
      - --innodb-buffer-pool-size=768M
      - --max-connections=50
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p${MYSQL_ROOT_PASSWORD}"]
      interval: 30s
      timeout: 10s
      retries: 3
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 1536M

  # MongoDB (1GB)
  mongodb:
    image: mongo:7.0
    container_name: tymee-staging-mongodb
    restart: unless-stopped
    environment:
      - MONGO_INITDB_ROOT_USERNAME=${MONGO_USER}
      - MONGO_INITDB_ROOT_PASSWORD=${MONGO_PASSWORD}
      - MONGO_INITDB_DATABASE=tymee
    volumes:
      - mongodb_data:/data/db
    command: ["--wiredTigerCacheSizeGB", "0.5"]
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 30s
      timeout: 10s
      retries: 3
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 1G

  # Redis (256MB)
  redis:
    image: redis:7-alpine
    container_name: tymee-staging-redis
    restart: unless-stopped
    command:
      - redis-server
      - --requirepass
      - ${REDIS_PASSWORD}
      - --maxmemory
      - 200mb
      - --maxmemory-policy
      - allkeys-lru
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "${REDIS_PASSWORD}", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 256M

  # RabbitMQ (512MB)
  rabbitmq:
    image: rabbitmq:3-management-alpine
    container_name: tymee-staging-rabbitmq
    restart: unless-stopped
    ports:
      - "15672:15672"
    environment:
      - RABBITMQ_DEFAULT_USER=${RABBITMQ_USER}
      - RABBITMQ_DEFAULT_PASS=${RABBITMQ_PASSWORD}
      - RABBITMQ_DEFAULT_VHOST=tymee
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    healthcheck:
      test: ["CMD", "rabbitmq-diagnostics", "-q", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 512M

  # ==================== 모니터링 ====================

  # cadvisor (64MB)
  cadvisor:
    image: gcr.io/cadvisor/cadvisor:latest
    container_name: tymee-staging-cadvisor
    restart: unless-stopped
    ports:
      - "8081:8080"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 64M

  # MySQL Exporter (32MB)
  mysql-exporter:
    image: prom/mysqld-exporter:latest
    container_name: tymee-staging-mysql-exporter
    restart: unless-stopped
    ports:
      - "9104:9104"
    environment:
      - DATA_SOURCE_NAME=root:${MYSQL_ROOT_PASSWORD}@(mysql:3306)/
    depends_on:
      - mysql
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 32M

  # MongoDB Exporter (32MB)
  mongodb-exporter:
    image: percona/mongodb_exporter:0.40
    container_name: tymee-staging-mongodb-exporter
    restart: unless-stopped
    ports:
      - "9216:9216"
    environment:
      - MONGODB_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/admin?authSource=admin
    depends_on:
      - mongodb
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 32M

  # Redis Exporter (32MB)
  redis-exporter:
    image: oliver006/redis_exporter:latest
    container_name: tymee-staging-redis-exporter
    restart: unless-stopped
    ports:
      - "9121:9121"
    environment:
      - REDIS_ADDR=redis:6379
      - REDIS_PASSWORD=${REDIS_PASSWORD}
    depends_on:
      - redis
    networks:
      - staging-network
    deploy:
      resources:
        limits:
          memory: 32M

volumes:
  mysql_data:
  mongodb_data:
  redis_data:
  rabbitmq_data:

networks:
  staging-network:
    driver: bridge
